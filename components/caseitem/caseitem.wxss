/* components/caseitem/caseitem.wxss */
.img-box{
    position: relative;
    height: 360rpx;
    width: 100%;
}
.img{
    position: relative;
    height: 360rpx;
}
.img image{
    width: 100%;
    height: 100%;
}
.img-mask{
    background: #000;
    opacity: 0.48;
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 5;
}
.desc{
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 5;
    display: flex;
    align-items: center;
}
.desc view{
    width: 710rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    font-family: 'PingFangSC-Regular';
}
.desc .title{
    font-family: 'PingFang SC';
    font-size: 60rpx;
    font-weight: bold;
}
/* components/proitem.wxss */
.img-box{
    position: relative;
    height: 380rpx;
    width: 100%;
}
.img{
    position: relative;
    height: 380rpx;
}
.img image{
    width: 100%;
    height: 100%;
}
.img-mask{
    background: #000;
    opacity: 0.48;
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 5;
}
.desc{
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 9;
}
.desc view{
    text-align: center;
    color: #fff;
    margin-top: 14rpx;
    font-family: 'PingFangSC-Regular';
}
.desc .title{
    margin-top: 80rpx;
    font-family: 'PingFangSC-Medium';
    font-size: 56rpx;
}
.desc .intro{
    font-size: 34rpx;
}
.desc .link{
    margin-top: 72rpx;
}
.text-box{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 220rpx;
    border: 2rpx solid #EBEBEB;
    border-radius: 0 0 8rpx 8rpx;
    background-color: #fff;
}
.text-item{
    width: 50%;
    text-align: center;
}
.text-item view{
    color: #383838;
    font-family: 'PingFangSC-Regular';
    font-size: 34rpx;
    color: #303030;
}
.text-item .number{
    font-family: 'PingFangSC-Medium';
    font-size: 72rpx;
}

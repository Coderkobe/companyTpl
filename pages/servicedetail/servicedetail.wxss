.header{
    position: relative;
    height: 258rpx;
}
.cover-picture{
    width: 100%;
    height: 258rpx;
}
.header .mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 258rpx;
    background-color: #000;
    opacity: 0.48;
    z-index: 9;
}
.article-title{
    text-align: center;
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
    font-weight: bold;
    width: 100%;
    height: 100%;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size: 40rpx;
}
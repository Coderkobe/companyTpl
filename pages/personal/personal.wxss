/* pages/personal.wxss */
page{
    background-color: #f4f4f4;
}
.person-info{
    min-height: 352rpx;
    background-color: #fff;
    text-align: center;
    position: relative;
}
.person-info image{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    margin: 40rpx auto;
    border: 2rpx solid #ccc;
}
.person-info .user-name{
    font-family: 'PingFangSC-Regular';
    font-size: 34rpx;
    color: #303030;
}
.person-info .number{
    font-size: 24rpx;
    color: rgba(48,48,48,0.80);
}
.person-info .statistics{
    padding: 0 40rpx;
    font-family: 'PingFangSC-Regular';
    font-size: 24rpx;
    color: rgba(48,48,48,0.50);
    text-align: center;
    line-height: 23px;
    display: flex;
    margin-top: 50rpx;
    padding-bottom: 40rpx;
}
.person-info .statistics .s-num{
    font-family: 'PingFangSC-Medium';
    font-size: 52rpx;
    color: #303030;
    text-align: center;
    line-height: 46rpx;
}
.person-info .statistics>view{
    width: 50%;
}
.person-info .title{
    font-family: 'PingFangSC-Regular';
    font-size: 28rpx;
    color: rgba(48,48,48,0.80);
    text-align: center;
    padding-top: 80rpx;
}
.person-info navigator, .person-info .authorization-now{
    width: 470rpx;
    height: 90rpx;
    background: #F15151;
    box-shadow: 0 6rpx 8rpx 0 rgba(140,140,140,0.50);
    border-radius: 200rpx;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
    margin: 0 auto;
    margin-top: 60rpx;
}
.scan-qrode-box{
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    font-size: 28rpx;
}
.scan-qrode{
    width: 63rpx;
    height: 64rpx;
    background: url('data:image/png;base64,') no-repeat;
    background-size: cover;
    margin: 0 auto;
}
.p-item{
    height: 224rpx;
    background-color: #fff;
    margin: 20rpx 0;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
}
.i-t{
    padding: 20rpx 30rpx 20rpx 30rpx;
    display: flex;
    border-bottom: 2rpx solid #f4f4f4;
    line-height: 42rpx;
    justify-content: space-between;
}
.i-t navigator{
    font-family: 'PingFangSC-Regular';
    font-size: 24rpx;
    color: rgba(48,48,48,0.50);
    letter-spacing: 0;
    
}
.i-t .tag-style{
    vertical-align: middle;
    display: inline-block;
    height: 40rpx;
    width: 12rpx;
    background-color: #f15151;
    border-radius: 4rpx;
    margin-right: 20rpx;
}
.i-t .title{
    color: #303030;
}
.p-item .content{
    color: rgba(48,48,48,0.50);
    margin-left: 40rpx;
}
.default-con{
    padding: 30rpx 40rpx 50rpx 0;
}

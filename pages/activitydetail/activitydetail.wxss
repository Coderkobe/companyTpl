/* pages/activitydetail.wxss */
@import "/wxParse/wxParse.wxss";
.article-header{
    position: relative;
    height: 400rpx;
    align-items: center;
}
.article-title{
    text-align: center;
    color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9;
    font-weight: bold;
    width: 100%;
    height: 100%;
    display:flex;
    align-items:center;
    justify-content:center;
}
.article-header .mask{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
    background-color: #000;
    opacity: 0.48;
    z-index: 9;
}
.act-info{
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.act-info view{
    flex: 1;
}
.act-info, .act-address{
    background-color: #fff;
    margin-bottom: 20rpx;
    padding: 20rpx;
}
.act-address .title{
    font-family: 'PingFangSC-Medium';
    font-size: 14pt;
}
.button-large-wrap{
    position:fixed;
    height:90rpx;
    width:100%;
    bottom:0;
}
.cover-picture{
    width: 100%;
    height: 400rpx;
}
.article-content{
    padding: 20rpx;
    background-color: #fff;
}
.article-content .wxParse-p{
    margin: 20rpx 0;
    font-size: 12pt;
    line-height: 1.8;
}
.article-content .wxParse-h1{
    margin: 20rpx 0;
}
.article-content .wxParse-img{
    width: 100%;
}
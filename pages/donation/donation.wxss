.h-btn-area{
    margin: 40rpx 20rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 10rpx;
    text-align: center;
    color: #fff;
    background-color: #e25e16;
}
.donation-info-container{
    height: 372rpx;
    padding: 10rpx 40rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}
.list-item{
    display: flex;
    justify-content: space-between;
    font-family: 'PingFangSC-Regular';
    font-size: 28rpx;
    color: #303030;
    line-height: 56rpx;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #E9EFF4;
}
.time{
    color: rgba(48,48,48,0.50);
}
.statistics{
    padding: 20rpx 0 20rpx;
    font-family: 'PingFangSC-Regular';
    font-size: 14px;
    color: #303030;
    padding-left: 40rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.statistics view{
    margin: 20rpx 0;
}
.s-title{
    color: rgba(48,48,48,0.50);
}
.s-light{
    color: #f15151;
    margin: 0 6rpx;
}
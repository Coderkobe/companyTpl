/* pages/actdetail/actdetail.wxss */
.act-detail{
    background-color: #fff;
}
.header{
    width: 100%;
}
.img-box{
    width: 100%;
    height: 360rpx;
}
.act-image{
    width: 100%;
    height: 100%;
}
.desc{
    padding: 20rpx 30rpx;
    box-shadow: 0 3px 8px 0 rgba(140,140,140,0.50); 
}
.name{
    color: #333333;
    font-size: 40rpx;
    margin-bottom: 16rpx;
}
.date, .address{
    font-size: 24rpx;
    color: #999999;
}
.date{
    margin-bottom: 10rpx;
}
.content{
    margin-top: 18rpx;
    color: #666666;
    font-size: 28rpx;
    line-height: 35rpx;
    background-color: #fff;
    padding: 0 30rpx;
}
.wxParse-h2{
    margin: 0 !important;
}
.wxParse-p{
    padding: 10rpx 0;
    margin-bottom: 0 !important;
}
.wxParse-inline{
    line-height: 35rpx !important;
    display: inline !important;
}